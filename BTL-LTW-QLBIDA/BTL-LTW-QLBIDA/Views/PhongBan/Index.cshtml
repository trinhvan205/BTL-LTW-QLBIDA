@{
    ViewData["Title"] = "Quản lý Bàn & Khu vực";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/ban.css" />

<div class="row ban-row">
    <div class="col-md-3 mb-3 ban-filter">
        <partial name="_Filter" />
    </div>

    <div class="col-md-9 ban-content">
        <div class="page-title-bar mb-3 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-secondary m-0">Danh sách Bàn Bida</h4>
        </div>

        <div id="tableScrollArea" class="table-responsive shadow-sm border rounded bg-white" style="max-height: 700px; overflow-y: auto;">
            <table class="table-ban align-middle mb-0">
                <thead class="sticky-top" style="z-index: 2;">
                    <tr>
                        <th class="col-maban">Mã Bàn</th>
                        <th>Khu vực</th>
                        <th class="text-end">Giá tiền/h</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center col-thaotac">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="banBody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="ajaxModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" id="ajaxModalContent"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ban.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}