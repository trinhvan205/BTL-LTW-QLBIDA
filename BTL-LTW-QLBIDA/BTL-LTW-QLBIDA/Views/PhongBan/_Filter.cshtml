<div class="card shadow-sm border-0 p-3 sticky-top" style="top: 20px; z-index: 1;">
    <h5 class="fw-bold text-primary mb-3"><i class="bi bi-funnel me-2"></i> Bộ lọc</h5>
    <form id="filterForm">
        <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-1">
                <label class="form-label fw-semibold m-0">Khu vực</label>
            </div>
            <select name="khuvuc" class="form-select" asp-items="ViewBag.KhuVucs">
                <option value="">-- Tất cả --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Mã bàn</label>
            <input name="search" class="form-control" placeholder="Nhập mã (VD: B01)..." />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Trạng thái</label>
            <select name="trangthai" class="form-select">
                <option value="" selected>Tất cả</option>
                <option value="false">Trống</option>
                <option value="true">Đang có khách</option>
            </select>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Tìm kiếm</button>
            <button type="button" id="btnClearFilter" class="btn btn-outline-secondary">Đặt lại</button>
        </div>
    </form>
    <hr />
    <div class="d-grid">
        <button id="btnCreate" class="btn btn-success py-2"><i class="bi bi-plus-circle"></i> Thêm bàn mới</button>
    </div>
</div>