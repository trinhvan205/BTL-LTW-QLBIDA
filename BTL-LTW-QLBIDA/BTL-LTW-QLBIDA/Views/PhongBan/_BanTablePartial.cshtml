@model BTL_LTW_QLBIDA.Models.PagedResult<BTL_LTW_QLBIDA.Models.Ban>

<table class="table table-hover">
    @* --- THAY ĐỔI Ở ĐÂY --- *@
    <thead class="bg-success text-white">
        <tr>
            <th>Tên bàn</th>
            <th>Khu vực</th>
            <th>Giá tiền</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    @* ---------------------- *@
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="clickable-row" data-id="@item.Idban" style="cursor: pointer;">
                <td>@item.Idban</td>
                <td>@item.IdkhuNavigation?.Tenkhu</td>
                <td>@string.Format("{0:N0}", item.Giatien)</td>
                <td>
                    @if (item.Trangthai == true)
                    {
                        <span class="text-danger">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="text-success">Trống</span>
                    }
                </td>
            </tr>

            <tr id="detail-row-@item.Idban" class="detail-row" style="display: none;">
                <td colspan="4" class="p-0 border-0">
                    <div id="detail-content-@item.Idban"></div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    @{
        var startItem = (Model.PageNumber - 1) * Model.PageSize + 1;
        var endItem = Math.Min(startItem + Model.PageSize - 1, Model.TotalItems);
    }
    <span>Hiển thị @startItem - @endItem trên tổng số @Model.TotalItems bàn</span>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link pagination-link" href="#" data-page="1" title="Trang đầu"><i class="bi bi-chevron-bar-left"></i></a>
                </li>
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link pagination-link" href="#" data-page="@(Model.PageNumber - 1)" title="Trang trước"><i class="bi bi-chevron-left"></i></a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link pagination-link" href="#" data-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link pagination-link" href="#" data-page="@(Model.PageNumber + 1)" title="Trang sau"><i class="bi bi-chevron-right"></i></a>
                </li>
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link pagination-link" href="#" data-page="@Model.TotalPages" title="Trang cuối"><i class="bi bi-chevron-bar-right"></i></a>
                </li>
            </ul>
        </nav>
    }
</div>