@model BTL_LTW_QLBIDA.Models.ViewModels.BanScrollVm

@foreach (var item in Model.Items)
{
    <tr>
        <td class="fw-bold text-primary">@item.Idban</td>
        <td>
            <span class="badge bg-info text-dark">@item.IdkhuNavigation?.Tenkhu</span>
        </td>
        <td class="text-end fw-bold">@string.Format("{0:N0}", item.Giatien) đ</td>
        <td class="text-center">
            @if (item.Trangthai == true)
            {
                <span class="badge bg-danger"><i class="bi bi-circle-fill me-1" style="font-size:8px;"></i> Có khách</span>
            }
            else
            {
                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Trống</span>
            }
        </td>
        <td class="text-center">
            <div class="btn-group" role="group">
                <button class="btn btn-sm btn-outline-info btn-details" data-id="@item.Idban" title="Lịch sử"><i class="bi bi-clock-history"></i></button>

                @if (item.Trangthai == false)
                {
                    <button class="btn btn-sm btn-outline-warning btn-edit" data-id="@item.Idban" title="Sửa"><i class="bi bi-pencil"></i></button>
                    <button class="btn btn-sm btn-outline-danger btn-delete" data-id="@item.Idban" title="Xóa"><i class="bi bi-trash"></i></button>
                }
                else
                {
                    <button class="btn btn-sm btn-outline-secondary" disabled title="Đang hoạt động"><i class="bi bi-pencil"></i></button>
                    <button class="btn btn-sm btn-outline-secondary" disabled title="Đang hoạt động"><i class="bi bi-trash"></i></button>
                }
            </div>
        </td>
    </tr>
}

@if (!Model.HasMore)
{
    <tr class="no-more"><td colspan="5" class="text-center text-muted py-3">--- Hết dữ liệu ---</td></tr>
}