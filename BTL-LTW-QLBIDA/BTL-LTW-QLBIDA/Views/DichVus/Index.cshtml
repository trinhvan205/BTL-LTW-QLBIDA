@{
    ViewData["Title"] = "Quản lý Dịch vụ";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/dichvu.css" />

<div class="row dichvu-row">
    <div class="col-md-3 mb-3 dichvu-filter">
        <partial name="_Filter" />
    </div>

    <div class="col-md-9 dichvu-content">
        <div class="page-title-bar mb-3 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-secondary m-0">Danh sách Dịch vụ</h4>
        </div>

        <div id="tableScrollArea" class="table-responsive shadow-sm border rounded bg-white" style="max-height: 700px; overflow-y: auto;">
            <table class="table-dichvu align-middle mb-0">
                <thead class="sticky-top" style="z-index: 2;">
                    <tr>
                        <th class="col-madv">Mã DV</th>
                        <th>Hình ảnh</th>
                        <th>Tên dịch vụ</th>
                        <th>Loại</th>
                        <th class="text-end">Giá bán</th>
                        <th class="text-center">Tồn kho</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center col-thaotac">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="dichvuBody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="ajaxModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="ajaxModalContent"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dichvu.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}