@model BTL_LTW_QLBIDA.Models.Dichvu
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="p-3">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-bold text-primary mb-0 d-flex align-items-center gap-2">
            <i class="bi bi-info-circle-fill"></i>
            @Model.Tendv
        </h5>
        <button class="btn btn-light btn-sm shadow-sm" onclick="$('#dichvuDetail').html('')">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <!-- IMAGE -->
    <div class="text-center mb-3">
        <img src="@Model.Imgpath"
             class="rounded shadow-sm border"
             style="width:150px;height:150px;object-fit:cover;" />

        <div class="mt-2">
            @if (Model.Hienthi == true)
            {
                <span class="badge bg-success px-3 py-2">
                    <i class="bi bi-check-circle-fill"></i>
                    Đang bán
                </span>
            }
            else
            {
                <span class="badge bg-secondary px-3 py-2">
                    <i class="bi bi-x-circle-fill"></i>
                    Ngưng bán
                </span>
            }
        </div>
    </div>

    <!-- DETAILS TABLE -->
    <table class="table table-sm">
        <tbody>
            <tr>
                <th class="text-muted">Mã DV</th>
                <td class="text-end fw-semibold">@Model.Iddv</td>
            </tr>

            <tr>
                <th class="text-muted">Tên dịch vụ</th>
                <td class="text-end fw-semibold">@Model.Tendv</td>
            </tr>

            <tr>
                <th class="text-muted">Loại</th>
                <td class="text-end fw-semibold">@Model.IdloaiNavigation?.Tenloai</td>
            </tr>

            <tr>
                <th class="text-muted">Giá bán</th>
                <td class="text-end fw-bold text-primary">
                    @((Model.Giatien ?? 0).ToString("N0")) VNĐ
                </td>
            </tr>

            <tr>
                <th class="text-muted">Tồn kho</th>
                <td class="text-end fw-semibold @(Model.Soluong <= 5 ? "text-danger" : "")">
                    @Model.Soluong
                </td>
            </tr>
        </tbody>
    </table>

</div>
