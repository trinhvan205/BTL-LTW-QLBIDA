@model BTL_LTW_QLBIDA.Models.Dichvu
<div class="modal-header bg-success text-white">
    <h5 class="modal-title">Thêm dịch vụ mới</h5>
    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <form id="createForm" enctype="multipart/form-data">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="text-center mb-3">
                    <img id="previewImg" src="/images/default-product.png" class="img-thumbnail mb-2" style="width:100%; height:150px; object-fit:contain;">
                    <input type="file" name="imageFile" id="imageFile" class="form-control form-control-sm" accept="image/*" onchange="previewFile()">
                </div>
            </div>
            <div class="col-md-8">
                <div class="row g-2">
                    <div class="col-12">
                        <label class="fw-bold">Mã DV</label>
                        <input asp-for="Iddv" class="form-control bg-light" readonly />
                    </div>
                    <div class="col-12">
                        <label class="fw-bold">Tên dịch vụ *</label>
                        <input asp-for="Tendv" class="form-control" required />
                    </div>
                    <div class="col-6">
                        <label class="fw-bold">Loại</label>
                        <select asp-for="Idloai" class="form-select" asp-items="@(new SelectList(ViewBag.LoaiDichVu, "Idloai", "Tenloai"))"></select>
                    </div>
                    <div class="col-6">
                        <label class="fw-bold">Giá bán</label>
                        <input asp-for="Giatien" class="form-control" type="number" />
                    </div>
                    <div class="col-6">
                        <label class="fw-bold">Số lượng</label>
                        <input asp-for="Soluong" class="form-control" type="number" />
                    </div>
                    <div class="col-6">
                        <label class="fw-bold">Trạng thái</label>
                        <select asp-for="Hienthi" class="form-select">
                            <option value="true">Kinh doanh</option>
                            <option value="false">Ngưng bán</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    <button class="btn btn-success" id="btnSaveCreate">Lưu</button>
</div>
<script>
    function previewFile() {
        var preview = document.querySelector('#previewImg');
        var file = document.querySelector('#imageFile').files[0];
        var reader = new FileReader();
        reader.onloadend = function () { preview.src = reader.result; }
        if (file) { reader.readAsDataURL(file); }
    }
</script>