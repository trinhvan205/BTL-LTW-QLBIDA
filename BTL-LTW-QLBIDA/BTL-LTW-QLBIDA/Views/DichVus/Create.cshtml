@model BTL_LTW_QLBIDA.Models.Dichvu
@using BTL_LTW_QLBIDA.Models

<form id="addForm" enctype="multipart/form-data" novalidate>

    <div class="modal-header bg-success text-white">
        <h5 class="modal-title">Thêm dịch vụ mới</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body p-3">

        <div class="mb-3">
            <label class="form-label fw-semibold">Tên dịch vụ</label>
            <input id="add_Tendv" name="Tendv"
                   class="form-control form-control-sm" placeholder="Nhập tên..." />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Loại</label>
            <select id="add_Idloai" name="Idloai" class="form-select form-select-sm">
                <option value="">-- Chọn loại --</option>
                @foreach (var l in ViewBag.ListLoai)
                {
                    <option value="@l.Idloai">@l.Tenloai</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Giá bán</label>
            <input id="add_Gia" name="Giatien" type="number" min="0"
                   class="form-control form-control-sm" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Tồn kho</label>
            <input id="add_Soluong" name="Soluong" type="number" min="0"
                   class="form-control form-control-sm" />
        </div>

        <label class="form-label fw-bold">Ảnh</label>
        <div class="d-flex gap-3 mb-2">
            <img id="preview_add_img"
                 src="/images/no-image.png"
                 style="width:80px;height:80px;border-radius:8px;object-fit:cover;"
                 class="shadow-sm" />

            <input name="imageFile" id="input_add_img"
                   type="file" accept="image/*" class="form-control form-control-sm" />
        </div>
    </div>

    <div class="modal-footer">
        <!-- FIX LỖI: thêm type="button" -->
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>

        <button type="submit" class="btn btn-success">Lưu</button>
    </div>
</form>
