@model BTL_LTW_QLBIDA.Models.ViewModels.DichvuScrollVm

@foreach (var item in Model.Items)
{
    <tr>
        <td class="fw-bold text-primary">@item.Iddv</td>
        <td>
            <img src="@item.Imgpath" class="rounded border" style="width:40px; height:40px; object-fit:cover;" onerror="this.src='/images/default.png'" />
        </td>
        <td class="fw-semibold">@item.Tendv</td>
        <td><span class="badge bg-light text-dark border">@item.IdloaiNavigation?.Tenloai</span></td>
        <td class="text-end text-success fw-bold">@string.Format("{0:N0}", item.Giatien)</td>
        <td class="text-center">
            @if (item.Soluong <= 5)
            {
                <span class="text-danger fw-bold">@item.Soluong</span>
            }
            else
            {

                <span>@item.Soluong</span>
            }
        </td>
        <td class="text-center">
            @if (item.Hienthi == true)
            {
                <span class="badge bg-success">Kinh doanh</span>
            }
            else
            {

                <span class="badge bg-secondary">Ngưng</span>
            }
        </td>
        <td class="text-center">
            <div class="btn-group">
                <button class="btn btn-sm btn-details" data-id="@item.Iddv"><i class="bi bi-eye text-primary"></i></button>
                <button class="btn btn-sm btn-edit" data-id="@item.Iddv"><i class="bi bi-pencil text-warning"></i></button>
                <button class="btn btn-sm btn-delete" data-id="@item.Iddv"><i class="bi bi-trash text-danger"></i></button>
            </div>
        </td>
    </tr>
}
@if (!Model.HasMore)
{
    <tr class="no-more"><td colspan="8" class="text-center text-muted py-3">Hết dữ liệu</td></tr>
}