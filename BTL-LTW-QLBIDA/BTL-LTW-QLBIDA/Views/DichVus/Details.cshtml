@* @model BTL_LTW_QLBIDA.Models.Dichvu
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0">

        <!-- HEADER giống modal hóa đơn -->
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="m-0">
                    <i class="bi bi-box-seam me-2"></i>
                    Chi tiết dịch vụ: @Model.Tendv
                </h5>
                <a asp-controller="Dichvus" asp-action="Index" class="btn btn-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>

            </div>
        </div>

        <!-- BODY -->
        <div class="card-body p-4">

            <!-- THÔNG TIN CHUNG - Card giống hóa đơn -->
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-header bg-light fw-bold text-primary">
                    <i class="bi bi-info-circle me-1"></i> Thông tin chung
                </div>

                <div class="card-body">

                    <!-- Hình ảnh ở giữa -->
                    <div class="text-center mb-4">
                        <img src="@Model.Imgpath"
                             alt="@Model.Tendv"
                             class="rounded shadow-sm border"
                             style="width:200px;height:200px;object-fit:cover;" />
                    </div>

                    <!-- Layout 2 cột giống hóa đơn -->
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <p><strong>Mã dịch vụ:</strong> @Model.Iddv</p>
                            <p><strong>Tên dịch vụ:</strong> @Model.Tendv</p>
                            <p><strong>Loại:</strong> @Model.IdloaiNavigation?.Tenloai</p>
                        </div>

                        <div class="col-md-6">
                            <p>
                                <strong>Giá bán:</strong><br />
                                <span class="fw-bold text-primary fs-5">
                                    @((Model.Giatien ?? 0).ToString("N0")) VNĐ
                                </span>
                            </p>
                            <p>
                                <strong>Tồn kho:</strong>
                                <span class="fw-bold fs-5 @(Model.Soluong <= 5 ? "text-danger" : "text-success")">
                                    @Model.Soluong
                                </span>
                                @if (Model.Soluong <= 5)
                                {
                                    <span class="badge bg-danger ms-2">
                                        <i class="bi bi-exclamation-triangle"></i> Sắp hết
                                    </span>
                                }
                            </p>
                        </div>
                    </div>

                    <p>
                        <strong>Trạng thái:</strong>
                        @if (Model.Hienthi == true)
                        {
                            <span class="badge bg-success px-3 py-2">
                                <i class="bi bi-check-circle-fill"></i> Đang bán
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary px-3 py-2">
                                <i class="bi bi-x-circle-fill"></i> Ngưng bán
                            </span>
                        }
                    </p>

                </div>
            </div>

            <!-- NÚT HÀNH ĐỘNG - Đặt ở dưới cùng -->
            <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-warning text-white btn-edit-detail" data-id="@Model.Iddv">
                    <i class="bi bi-pencil-square"></i> Sửa
                </button>
                <button class="btn btn-danger" onclick="deleteDv('@Model.Iddv')">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </div>

        </div>

    </div>

</div>



<!-- =============================================================== -->
<!--  MODAL CHỈNH SỬA -->
<!-- =============================================================== -->
<div class="modal fade" id="dvEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body" id="dvEditModalContent">
            </div>
        </div>
    </div>
</div>



<!-- =============================================================== -->
<!--  SCRIPT XỬ LÝ CHI TIẾT + SỬA + XÓA -->
<!-- =============================================================== -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        /* ============================
           XÓA
        ============================ */
        function deleteDv(id) {

            Swal.fire({
                title: "Xóa dịch vụ?",
                text: "Hành động này không thể hoàn tác!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Xóa",
                cancelButtonText: "Hủy"
            }).then(r => {

                if (!r.isConfirmed) return;

                $.post("/Dichvus/DeleteAjax", { id: id }, function (res) {

                    if (res.success) {
                        Swal.fire("Đã xóa!", "", "success");
                        window.location.href = "/Dichvus";
                    }
                    else {
                        Swal.fire("Lỗi", res.message, "error");
                    }
                });

            });
        }


        /* ============================
           CLICK "Sửa" → LOAD EDIT MODAL
        ============================ */
        $(document).on("click", ".btn-edit-detail", function () {

            let id = $(this).data("id");

            $("#dvEditModalContent").html(`
                <div class="p-4 text-center text-muted">
                    <div class="spinner-border text-primary"></div>
                </div>`);

            let modal = new bootstrap.Modal(document.getElementById("dvEditModal"));
            modal.show();

            $.ajax({
                url: "/Dichvus/GetEditForm",
                method: "GET",
                data: { id: id },

                success: function (html) {
                    $("#dvEditModalContent").html(html);
                },

                error: function () {
                    $("#dvEditModalContent").html(`
                        <div class='p-3 text-danger'>Lỗi tải dữ liệu!</div>
                    `);
                }
            });
        });


        /* ============================
           LƯU CHỈNH SỬA TỪ MODAL
        ============================ */
        $(document).on("click", "#btnSaveEdit", function () {

            let formData = new FormData();
            formData.append("Iddv", $("#editIddv").val());
            formData.append("Tendv", $("#editTendv").val());
            formData.append("Idloai", $("#editIdloai").val());
            formData.append("Giatien", $("#editGia").val());
            formData.append("Soluong", $("#editSoluong").val());
            formData.append("Hienthi", $("#editHienthi").val());

            let img = $("#editImage")[0].files[0];
            if (img) formData.append("imageFile", img);

            $.ajax({
                url: "/Dichvus/UpdateAjax",
                method: "POST",
                processData: false,
                contentType: false,
                data: formData,

                success: function (res) {

                    if (!res.success) {
                        Swal.fire("Lỗi", res.message, "error");
                        return;
                    }

                    Swal.fire("Thành công", "Cập nhật dịch vụ thành công!", "success");

                    // đóng modal
                    bootstrap.Modal.getInstance(document.getElementById("dvEditModal")).hide();

                    // reload lại chi tiết
                    location.reload();
                }
            });
        });

    </script>
    <!-- SweetAlert2 -->
} *@
