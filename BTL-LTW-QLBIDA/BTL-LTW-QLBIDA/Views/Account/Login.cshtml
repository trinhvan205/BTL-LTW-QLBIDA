@model BTL_LTW_QLBIDA.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Nhập - Quản Lý Quán Billiards</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/Account/Login.css" rel="stylesheet" />
</head>
<body>
    <video autoplay muted loop id="bg-video">
        <source src=~/video/videobg.mp4" type="video/mp4">
    </video>
    <div class="login-container">
        <div class="login-header">
            <i class="fas fa-billiard-ball"></i>
            <h2>QUẢN LÝ QUÁN BILLIARDS</h2>
            <p class="mb-0">Đăng nhập hệ thống</p>
        </div>

        <form asp-action="Login" asp-controller="Account" method="post" id="loginForm">

            <div class="login-body-wrapper">

                <div class="login-section-left">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="TenDangNhap" class="form-label fw-bold">
                            <i class="fas fa-user me-2"></i>Tên đăng nhập
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-user text-muted"></i>
                            </span>
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" autofocus />
                        </div>
                        <span asp-validation-for="TenDangNhap" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label fw-bold">
                            <i class="fas fa-lock me-2"></i>Mật khẩu
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock text-muted"></i>
                            </span>
                            <input asp-for="MatKhau" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                        </div>
                        <span asp-validation-for="MatKhau" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input asp-for="GhiNho" class="form-check-input" type="checkbox" />
                            <label asp-for="GhiNho" class="form-check-label">Ghi nhớ</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-login">
                        <i class="fas fa-sign-in-alt me-2"></i>Đăng Nhập
                    </button>

                    <div class="mt-3 text-center text-muted small">
                        <i class="fas fa-info-circle me-1"></i> Liên hệ Admin nếu quên mật khẩu
                    </div>
                </div>

                <div class="vertical-divider"></div>

                <div class="login-section-right">
                    <div class="function-title">
                        <i class="fas fa-hand-pointer me-2 function-icon"></i>Vai trò
                    </div>

                    <input type="hidden" asp-for="ChucNang" id="chucNangInput" value="ThuNgan" />

                    <div class="function-buttons-vertical">
                        <div class="btn-function active" onclick="selectFunction('ThuNgan')" id="btn-banhang">
                            <div class="d-flex align-items-center justify-content-between w-100 px-2">
                                <div class="text-start">
                                    <div class="function-name">BÁN HÀNG</div>
                                    <div class="function-desc">Phục vụ khách hàng</div>
                                </div>
                                <i class="fas fa-cash-register ms-2" style="font-size: 24px;"></i>
                            </div>
                        </div>

                        <div class="btn-function" onclick="selectFunction('quantri')" id="btn-quantri">
                            <div class="d-flex align-items-center justify-content-between w-100 px-2">
                                <div class="text-start">
                                    <div class="function-name">QUẢN TRỊ</div>
                                    <div class="function-desc">Quản lý hệ thống</div>
                                </div>
                                <i class="fas fa-user-shield ms-2" style="font-size: 24px;"></i>
                            </div>
                            <i class="fas fa-lock lock-icon" id="lock-icon" style="display:none;"></i>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function selectFunction(funcName) {
            // Cập nhật giá trị input hidden
            document.getElementById('chucNangInput').value = funcName;

            // Xử lý class active
            document.getElementById('btn-banhang').classList.remove('active');
            document.getElementById('btn-quantri').classList.remove('active');

            if (funcName === 'ThuNgan') {
                document.getElementById('btn-banhang').classList.add('active');
            } else {
                document.getElementById('btn-quantri').classList.add('active');
            }
        }
    </script>
</body>
</html>