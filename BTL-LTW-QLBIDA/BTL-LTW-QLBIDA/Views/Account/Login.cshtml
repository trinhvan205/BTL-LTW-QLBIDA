@model BTL_LTW_QLBIDA.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Nhập - Quản Lý Quán Billiards</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/Account/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <i class="fas fa-billiard-ball"></i>
            <h2>QUẢN LÝ QUÁN BILLIARDS</h2>
            <p class="mb-0">Đăng nhập hệ thống</p>
        </div>

        <div class="login-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Login" asp-controller="Account" method="post" id="loginForm">
                <div class="mb-3">
                    <label asp-for="TenDangNhap" class="form-label fw-bold">
                        <i class="fas fa-user me-2"></i>Tên đăng nhập
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user text-muted"></i>
                        </span>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" autofocus />
                    </div>
                    <span asp-validation-for="TenDangNhap" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label fw-bold">
                        <i class="fas fa-lock me-2"></i>Mật khẩu
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock text-muted"></i>
                        </span>
                        <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" />
                    </div>
                    <span asp-validation-for="MatKhau" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="GhiNho" class="form-check-input" type="checkbox" />
                        <label asp-for="GhiNho" class="form-check-label">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>
                </div>

                <!-- PHẦN CHỌN CHỨC NĂNG -->
                <div class="function-selection">
                    <div class="function-title">
                        <i class="fas fa-hand-pointer me-2"></i>Chọn chức năng
                    </div>

                    <input type="hidden" asp-for="ChucNang" id="chucNangInput" />

                    <div class="function-buttons">
                        <!-- NÚT BÁN HÀNG - Luôn có thể chọn -->
                        <div class="btn-function active" onclick="selectFunction('banhang')" id="btn-banhang">
                            <i class="fas fa-cash-register"></i>
                            <div class="function-name">BÁN HÀNG</div>
                            <div class="function-desc">Phục vụ khách hàng</div>
                        </div>

                        <!-- NÚT QUẢN TRỊ - Chỉ Admin mới chọn được -->
                        <div class="btn-function" onclick="selectFunction('quantri')" id="btn-quantri">
                            <i class="fas fa-user-shield"></i>
                            <div class="function-name">QUẢN TRỊ</div>
                            <div class="function-desc">Quản lý hệ thống</div>
                            <i class="fas fa-lock lock-icon" id="lock-icon" style="display:none;"></i>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-login mt-4">
                    <i class="fas fa-sign-in-alt me-2"></i>Đăng Nhập
                </button>
            </form>

            <div class="mt-4 text-center text-muted small">
                <i class="fas fa-info-circle me-1"></i>
                Liên hệ quản trị viên nếu quên mật khẩu
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Account/Login.js">
       
    </script>
</body>
</html>