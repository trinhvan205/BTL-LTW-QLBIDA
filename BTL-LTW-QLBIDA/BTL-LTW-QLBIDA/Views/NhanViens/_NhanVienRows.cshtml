@model BTL_LTW_QLBIDA.Models.ViewModels.NhanVienScrollVm

@foreach (var item in Model.Items)
{
    <tr>
        <td class="fw-bold text-primary">@item.Idnv</td>
        <td>
            <div class="d-flex align-items-center">
                <div class="avatar-circle bg-primary text-white me-2">
                    @(item.Hotennv?.Substring(0, 1).ToUpper() ?? "N")
                </div>
                <span class="fw-semibold">@item.Hotennv</span>
            </div>
        </td>
        <td>
            @if (item.Gioitinh == false)
            {
                <span class="text-primary"><i class="bi bi-gender-male"></i> Nam</span>
            }
            else
            {

                <span class="text-danger"><i class="bi bi-gender-female"></i> Nữ</span>
            }
        </td>
        <td>@item.Sodt</td>

        <td>
            @if (!string.IsNullOrEmpty(item.Tendangnhap))
            {
                <div class="d-flex flex-column">
                    <span class="fw-bold text-dark">@item.Tendangnhap</span>
                    @if (item.Quyenadmin == true)
                    {
                        <span class="badge bg-warning text-dark mt-1" style="width:fit-content">Admin</span>
                    }
                </div>
            }
            else
            {
                <span class="text-muted small fst-italic">Chưa cấp TK</span>
            }
        </td>

        <td>
            @if (item.Nghiviec == false)
            {
                <span class="badge bg-success">Đang làm</span>
            }
            else
            {
                <span class="badge bg-secondary">Đã nghỉ</span>
            }
        </td>

        <td class="text-center">
            <div class="btn-group">
                <button class="btn btn-sm btn-details" data-id="@item.Idnv" title="Chi tiết">
                    <i class="bi bi-eye text-primary"></i>
                </button>

                <button class="btn btn-sm btn-edit" data-id="@item.Idnv" title="Sửa">
                    <i class="bi bi-pencil text-warning"></i>
                </button>

                @if (!string.IsNullOrEmpty(item.Tendangnhap))
                {
                    <button class="btn btn-sm btn-toggle" data-id="@item.Idnv" title="Đổi trạng thái Nghỉ/Làm">
                        <i class="bi bi-arrow-repeat text-success"></i>
                    </button>
                }
                else
                {
                    <button class="btn btn-sm btn-delete" data-id="@item.Idnv" title="Xóa vĩnh viễn">
                        <i class="bi bi-trash text-danger"></i>
                    </button>
                }
            </div>
        </td>
    </tr>
}

@if (!Model.HasMore)
{
    <tr class="no-more"><td colspan="7" class="text-center text-muted py-3">Hết dữ liệu</td></tr>
}