@model BTL_LTW_QLBIDA.Models.Nhanvien

<div class="modal-header bg-info text-white">
    <h5 class="modal-title">Hồ sơ nhân viên: @Model.Idnv</h5>
    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="text-center mb-4">
        <div class="avatar-circle bg-primary text-white mx-auto mb-2" style="width:80px; height:80px; font-size:30px;">
            @(Model.Hotennv?.Substring(0, 1).ToUpper() ?? "N")
        </div>
        <h4>@Model.Hotennv</h4>
        <p class="text-muted">
            @(Model.Gioitinh == false ? "Nam" : "Nữ") - @(Model.Sodt ?? "Không có SĐT")
        </p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h6 class="border-bottom pb-2 text-primary">Thông tin cá nhân</h6>
            <p class="mb-2"><strong>Ngày sinh:</strong> @(Model.Ngaysinh?.ToString("dd/MM/yyyy") ?? "---")</p>
            <p class="mb-2"><strong>CCCD:</strong> @(Model.Cccd ?? "---")</p>
            <p class="mb-2">
                <strong>Trạng thái:</strong>
                @if (Model.Nghiviec == true)
                {
                    <span class="text-danger fw-bold">Đã nghỉ việc</span>
                }
                else
                {

                    <span class="text-success fw-bold">Đang làm việc</span>
                }
            </p>
        </div>

        <div class="col-md-6">
            <h6 class="border-bottom pb-2 text-primary">Tài khoản hệ thống</h6>

            <div class="mb-2">
                <label class="small text-muted">Tên đăng nhập:</label>
                <div class="fw-bold">@(Model.Tendangnhap ?? "Chưa cấp tài khoản")</div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Tendangnhap))
            {
                <div class="mb-2">
                    <label class="small text-muted">Mật khẩu hiện tại:</label>
                    <div class="input-group input-group-sm">
                        <input type="password" class="form-control bg-white" value="@Model.Matkhau" id="viewPass" readonly>

                        <button class="btn btn-outline-secondary" type="button" onclick="togglePass()">
                            <i class="bi bi-eye" id="iconEye"></i>
                        </button>
                    </div>
                </div>

                <div class="mb-2">
                    <label class="small text-muted">Quyền hạn:</label>
                    <div>
                        @if (Model.Quyenadmin == true)
                        {
                            <span class="badge bg-warning text-dark">Quản trị viên (Admin)</span>
                        }
                        else
                        {

                            <span class="badge bg-info text-dark">Nhân viên thường</span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal-footer">
    <button class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
</div>

<script>
    function togglePass() {
        var input = document.getElementById("viewPass");
        var icon = document.getElementById("iconEye");

        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("bi-eye");
            icon.classList.add("bi-eye-slash");
        } else {
            input.type = "password";
            icon.classList.remove("bi-eye-slash");
            icon.classList.add("bi-eye");
        }
    }
</script>