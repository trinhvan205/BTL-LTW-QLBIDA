@model BTL_LTW_QLBIDA.Models.Nhanvien

@{
    ViewData["Title"] = "Xóa nhân viên";
    bool coTaiKhoan = !string.IsNullOrEmpty(Model.Tendangnhap) || !string.IsNullOrEmpty(Model.Matkhau);
}

<link href="~/css/NhanVien/Delete.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">Nhân viên</a>
                    </li>
                    <li class="breadcrumb-item active">Xóa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (coTaiKhoan)
            {
                <!-- KHÔNG CHO XÓA - Nhân viên có tài khoản -->
                <div class="card shadow-lg border-warning">
                    <div class="card-header bg-warning">
                        <h4 class="mb-0">
                            <i class="fas fa-ban me-2"></i>Không thể xóa nhân viên này
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Không thể xóa!</strong> Nhân viên này đã có tài khoản đăng nhập và có thể đã tham gia vào các giao dịch, hóa đơn trong hệ thống.
                        </div>

                        <!-- Thông tin nhân viên -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="text-center mb-4">
                                    <div class="avatar-large bg-warning text-dark mx-auto mb-3">
                                        @(Model.Hotennv?.Substring(0, 1).ToUpper() ?? "N")
                                    </div>
                                    <h5 class="mb-1">@Model.Hotennv</h5>
                                    <p class="text-muted mb-0">Mã NV: @Model.Idnv</p>
                                    @if (Model.Quyenadmin == true)
                                    {
                                        <span class="badge bg-danger mt-2">
                                            <i class="fas fa-crown me-1"></i>Admin
                                        </span>
                                    }
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="info-item">
                                            <span class="info-label">
                                                <i class="fas fa-user-circle text-muted me-2"></i>Tên đăng nhập
                                            </span>
                                            <span class="info-value">
                                                <span class="badge bg-success">@Model.Tendangnhap</span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-item">
                                            <span class="info-label">
                                                <i class="fas fa-key text-muted me-2"></i>Mật khẩu
                                            </span>
                                            <span class="info-value">
                                                <span class="text-muted">Đã thiết lập</span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-item">
                                            <span class="info-label">
                                                <i class="fas fa-phone text-muted me-2"></i>Số điện thoại
                                            </span>
                                            <span class="info-value">@(Model.Sodt ?? "N/A")</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-item">
                                            <span class="info-label">
                                                <i class="fas fa-id-card text-muted me-2"></i>CCCD
                                            </span>
                                            <span class="info-value">@(Model.Cccd ?? "N/A")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Gợi ý giải pháp -->
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-lightbulb me-2"></i>Giải pháp thay thế
                            </h6>
                            <p class="mb-2">Thay vì xóa, bạn có thể:</p>
                            <ol class="mb-0">
                                <li><strong>Chuyển sang trạng thái "Nghỉ việc"</strong> - Nhân viên sẽ không thể đăng nhập nhưng dữ liệu vẫn được bảo toàn</li>
                                <li><strong>Xóa tài khoản</strong> - Xóa tên đăng nhập và mật khẩu, sau đó mới có thể xóa nhân viên</li>
                            </ol>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Idnv" class="btn btn-primary btn-lg">
                                <i class="fas fa-edit me-1"></i>Chỉnh sửa thông tin
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- CHO PHÉP XÓA - Nhân viên chưa có tài khoản -->
                <div class="card shadow-lg border-danger">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa nhân viên
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa nhân viên này không?
                            Thao tác này sẽ ẩn nhân viên khỏi danh sách.
                        </div>

                        <!-- Thông tin nhân viên -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="text-center mb-4">
                                    <div class="avatar-large bg-danger text-white mx-auto mb-3">
                                        @(Model.Hotennv?.Substring(0, 1).ToUpper() ?? "N")
                                    </div>
                                    <h5 class="mb-1">@Model.Hotennv</h5>
                                    <p class="text-muted mb-0">Mã NV: @Model.Idnv</p>
                                    <span class="badge bg-secondary mt-2">
                                        <i class="fas fa-user-slash me-1"></i>Chưa có tài khoản
                                    </span>
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="info-item">
                                            <span class="info-label">
                                                <i class="fas fa-phone text-muted me-2"></i>Số điện thoại
                                            </span>
                                            <span class="info-value">@(Model.Sodt ?? "N/A")</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-item">
                                            <span class="info-label">
                                                <i class="fas fa-id-card text-muted me-2"></i>CCCD
                                            </span>
                                            <span class="info-value">@(Model.Cccd ?? "N/A")</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-item">
                                            <span class="info-label">
                                                <i class="fas fa-venus-mars text-muted me-2"></i>Giới tính
                                            </span>
                                            <span class="info-value">
                                                @(Model.Gioitinh == false ? "Nam" : "Nữ")
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-item">
                                            <span class="info-label">
                                                <i class="fas fa-birthday-cake text-muted me-2"></i>Ngày sinh
                                            </span>
                                            <span class="info-value">
                                                @(Model.Ngaysinh?.ToString("dd/MM/yyyy") ?? "N/A")
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form xóa -->
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Idnv" />

                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-1"></i>Hủy bỏ
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="fas fa-trash me-1"></i>Xác nhận xóa
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Thông tin bổ sung -->
                <div class="alert alert-info mt-4">
                    <h6 class="alert-heading">
                        <i class="fas fa-info-circle me-2"></i>Lưu ý
                    </h6>
                    <ul class="mb-0">
                        <li>Nhân viên chưa có tài khoản có thể được xóa an toàn</li>
                        <li>Nhân viên sẽ bị ẩn khỏi danh sách nhưng dữ liệu vẫn được lưu trong hệ thống</li>
                        <li>Bạn có thể khôi phục lại bằng cách chỉnh sửa trạng thái "Hiển thị"</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
