@model BTL_LTW_QLBIDA.Models.Nhanvien

<div class="modal-header bg-success text-white">
    <h5 class="modal-title"><i class="bi bi-person-plus-fill me-2"></i>Thêm nhân viên mới</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <form id="createForm">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Mã Nhân viên</label>
                    <input asp-for="Idnv" class="form-control bg-light fw-bold text-primary" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Họ và Tên <span class="text-danger">*</span></label>
                    <input asp-for="Hotennv" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Ngày sinh</label>
                    <input asp-for="Ngaysinh" type="date" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Giới tính</label>
                    <div class="d-flex gap-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Gioitinh" value="false" id="c_nam" @(Model.Gioitinh != true ? "checked" : "")>
                            <label class="form-check-label" for="c_nam">Nam</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Gioitinh" value="true" id="c_nu" @(Model.Gioitinh == true ? "checked" : "")>
                            <label class="form-check-label" for="c_nu">Nữ</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Số CCCD</label>
                    <input asp-for="Cccd" class="form-control" maxlength="12" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Số điện thoại</label>
                    <input asp-for="Sodt" class="form-control" />
                </div>

                <div class="card bg-light border-0 p-2 mt-3">
                    <h6 class="text-success fw-bold"><i class="bi bi-shield-lock me-1"></i>Tài khoản (Tuỳ chọn)</h6>
                    <div class="mb-2">
                        <input asp-for="Tendangnhap" class="form-control form-control-sm" placeholder="Tên đăng nhập" />
                    </div>
                    <div class="mb-2">
                        <input asp-for="Matkhau" type="password" class="form-control form-control-sm" placeholder="Mật khẩu" />
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Quyenadmin" value="true" id="c_admin" @(Model.Quyenadmin == true ? "checked" : "")>
                        <input type="hidden" name="Quyenadmin" value="false" />

                        <label class="form-check-label small" for="c_admin">Quyền Quản trị viên</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    <button type="button" class="btn btn-success" id="btnSaveCreate">
        <i class="bi bi-save me-1"></i> Lưu nhân viên
    </button>
</div>