@model BTL_LTW_QLBIDA.Models.Nhanvien

@{
    ViewData["Title"] = "Sửa thông tin nhân viên";
}

<link rel="stylesheet" href="~/css/NhanVien/Edit.css" />

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">Nhân viên</a>
                    </li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
            <h3 class="mb-0">
                <i class="fas fa-user-edit me-2"></i>Sửa thông tin nhân viên
            </h3>
            <p class="text-muted">Mã nhân viên: <strong>@Model.Idnv</strong></p>
        </div>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Idnv" />

        <div class="row">
            <!-- Cột trái - Thông tin cơ bản -->
            <div class="col-md-6">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Hotennv" class="form-label fw-bold">
                                Họ và tên <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Hotennv" class="form-control" />
                            <span asp-validation-for="Hotennv" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ngaysinh" class="form-label fw-bold">
                                Ngày sinh
                            </label>
                            <input asp-for="Ngaysinh" type="date" class="form-control" />
                            <span asp-validation-for="Ngaysinh" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                Giới tính
                            </label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gioitinh" value="false" id="gioitinhNam">
                                    <label class="form-check-label" for="gioitinhNam">
                                        <i class="fas fa-mars text-primary me-1"></i>Nam
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gioitinh" value="true" id="gioitinhNu">
                                    <label class="form-check-label" for="gioitinhNu">
                                        <i class="fas fa-venus text-danger me-1"></i>Nữ
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cccd" class="form-label fw-bold">
                                Số CCCD
                            </label>
                            <input asp-for="Cccd" class="form-control" maxlength="15" />
                            <span asp-validation-for="Cccd" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sodt" class="form-label fw-bold">
                                Số điện thoại
                            </label>
                            <input asp-for="Sodt" class="form-control" maxlength="20" />
                            <span asp-validation-for="Sodt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cột phải - Tài khoản & Phân quyền -->
            <div class="col-md-6">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-lock me-2"></i>Tài khoản đăng nhập
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Tendangnhap" class="form-label fw-bold">
                                Tên đăng nhập
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input asp-for="Tendangnhap" class="form-control" />
                            </div>
                            <span asp-validation-for="Tendangnhap" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Matkhau" class="form-label fw-bold">
                                Mật khẩu
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </span>
                                <input asp-for="Matkhau" type="password" class="form-control" placeholder="Để trống nếu không đổi" />
                            </div>
                            <span asp-validation-for="Matkhau" class="text-danger"></span>
                            <small class="text-muted">Chỉ nhập nếu muốn thay đổi mật khẩu</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                Phân quyền
                            </label>
                            <div class="card border">
                                <div class="card-body">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="true" checked="@(Model.Quyenadmin)" name="Quyenadmin" id="quyenAdmin">
                                        <input type="hidden" name="Quyenadmin" value="false" />
                                        <label class="form-check-label" for="quyenAdmin">
                                            <i class="fas fa-crown text-danger me-1"></i>
                                            <strong>Quyền Quản trị viên</strong>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Trạng thái -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">
                            <i class="fas fa-toggle-on me-2"></i>Trạng thái
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" value="true" checked="@(Model.Hienthi)" name="Hienthi" id="hienthi">
                                <input type="hidden" name="Hienthi" value="false" />
                                <label class="form-check-label" for="hienthi">
                                    <strong>Hiển thị trong danh sách</strong>
                                </label>
                            </div>
                        </div>

                        <div class="mb-0">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" value="true" checked="@(Model.Nghiviec)" name="Nghiviec" id="nghiviec">
                                <input type="hidden" name="Nghiviec" value="false" />
                                <label class="form-check-label" for="nghiviec">
                                    <strong>Đã nghỉ việc</strong>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                    <div>
                        <a asp-action="Delete" asp-route-id="@Model.Idnv" class="btn btn-danger me-2">
                            <i class="fas fa-trash me-1"></i>Xóa
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Lưu thay đổi
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}