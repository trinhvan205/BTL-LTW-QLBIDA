@model BTL_LTW_QLBIDA.Models.Nhanvien

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<link href="~/css/NhanVien/Details.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">Nhân viên</a>
                    </li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Cột trái - Thông tin avatar và tổng quan -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="avatar-large bg-primary text-white mx-auto mb-3">
                        @(Model.Hotennv?.Substring(0, 1).ToUpper() ?? "N")
                    </div>
                    <h4 class="mb-1">@Model.Hotennv</h4>
                    <p class="text-muted mb-3">@Model.Idnv</p>

                    <!-- Badges -->
                    <div class="mb-3">
                        @if (Model.Quyenadmin == true)
                        {
                            <span class="badge bg-danger me-2">
                                <i class="fas fa-crown me-1"></i>Admin
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary me-2">
                                <i class="fas fa-user me-1"></i>Nhân viên
                            </span>
                        }

                        @if (Model.Nghiviec == false)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>Đang làm
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="fas fa-times-circle me-1"></i>Đã nghỉ
                            </span>
                        }
                    </div>

                    <!-- Action buttons -->
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Idnv" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>

                        @* Chỉ hiển thị nút xóa nếu nhân viên CHƯA có tài khoản *@
                        @if (string.IsNullOrEmpty(Model.Tendangnhap) && string.IsNullOrEmpty(Model.Matkhau))
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Idnv" class="btn btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>Xóa nhân viên
                            </a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-secondary" disabled title="Không thể xóa nhân viên có tài khoản">
                                <i class="fas fa-ban me-1"></i>Không thể xóa
                            </button>
                            <small class="text-muted mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Nhân viên có tài khoản không thể xóa. Vui lòng chuyển sang trạng thái "Nghỉ việc" thay thế.
                            </small>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột phải - Thông tin chi tiết -->
        <div class="col-md-8">
            <!-- Thông tin cá nhân -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>Thông tin cá nhân
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-id-card text-primary me-2"></i>Mã nhân viên
                                </span>
                                <span class="info-value">@Model.Idnv</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-user text-primary me-2"></i>Họ và tên
                                </span>
                                <span class="info-value">@Model.Hotennv</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-birthday-cake text-primary me-2"></i>Ngày sinh
                                </span>
                                <span class="info-value">
                                    @(Model.Ngaysinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-venus-mars text-primary me-2"></i>Giới tính
                                </span>
                                <span class="info-value">
                                    @(Model.Gioitinh == false ? "Nam" : "Nữ")
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-id-card text-primary me-2"></i>Số CCCD
                                </span>
                                <span class="info-value">@(Model.Cccd ?? "Chưa cập nhật")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-phone text-primary me-2"></i>Số điện thoại
                                </span>
                                <span class="info-value">@(Model.Sodt ?? "Chưa cập nhật")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin tài khoản -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-lock me-2"></i>Thông tin tài khoản
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-user-circle text-success me-2"></i>Tên đăng nhập
                                </span>
                                <span class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Tendangnhap))
                                    {
                                        <span class="badge bg-success">@Model.Tendangnhap</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có tài khoản</span>
                                    }
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-shield-alt text-success me-2"></i>Quyền truy cập
                                </span>
                                <span class="info-value">
                                    @if (Model.Quyenadmin == true)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-crown me-1"></i>Quản trị viên
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-user me-1"></i>Nhân viên
                                        </span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-key text-success me-2"></i>Mật khẩu
                                </span>
                                <span class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Matkhau))
                                    {
                                        <span class="text-muted">••••••••</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa đặt</span>
                                    }
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-eye text-success me-2"></i>Hiển thị
                                </span>
                                <span class="info-value">
                                    @if (Model.Hienthi == true)
                                    {
                                        <span class="badge bg-success">Đang hiển thị</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã ẩn</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nút quay lại -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
