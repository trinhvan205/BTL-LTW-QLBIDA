@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<link rel="stylesheet" href="~/css/NhanVien/Index.css" />

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filter -->
        <div class="col-md-3 col-lg-2 px-0" style="background: #f8f9fa; min-height: calc(100vh - 120px);">
            <div class="p-3">
                <!-- Nút thêm nhân viên -->
                <div class="mb-4">
                    <a asp-action="Create" class="btn btn-success w-100">
                        <i class="fas fa-plus me-1"></i>Nhân viên
                    </a>
                </div>

                <!-- Tìm kiếm -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </h6>
                    <input type="text" id="searchInput" class="form-control"
                           placeholder="Mã, tên, CCCD, SĐT...">
                </div>

                <!-- Trạng thái -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-filter me-2"></i>Trạng thái
                    </h6>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="trangThai"
                               id="dangLam" value="danglam" checked>
                        <label class="form-check-label" for="dangLam">
                            <i class="fas fa-circle text-success me-1"></i>Đang làm việc
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="trangThai"
                               id="daNghi" value="danghhi">
                        <label class="form-check-label" for="daNghi">
                            <i class="fas fa-circle text-secondary me-1"></i>Đã nghỉ
                        </label>
                    </div>
                </div>

                <!-- Reset Button -->
                <button type="button" id="btnReset" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-redo me-1"></i>Đặt lại
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <div class="p-3">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h3 class="mb-1">
                            <i class="fas fa-users me-2"></i>Danh sách nhân viên
                        </h3>
                        <p class="text-muted mb-0">
                            Tổng: <strong id="totalCount">0</strong> nhân viên
                        </p>
                    </div>
                    @* <div>
                        <button class="btn btn-outline-secondary">
                            <i class="fas fa-file-import me-1"></i>Nhập file
                        </button>
                        <button class="btn btn-outline-secondary">
                            <i class="fas fa-file-export me-1"></i>Xuất file
                        </button>
                    </div> *@
                </div>

                <div id="apiAlertContainer" class="mb-3">
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="AutoCloseAlert" class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="AutoCloseAlert" class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <!-- Loading Spinner -->
                <div id="loadingSpinner" class="text-center py-5" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Đang tải dữ liệu...</p>
                </div>

                <!-- Table -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="nhanvienTable">
                                <thead class="table-light">
                                    <tr>
                                        
                                        <th style="width: 80px;">Ảnh</th>
                                        <th>Mã nhân viên</th>
                                        <th>Tên đăng nhập</th>
                                        <th>Tên nhân viên</th>
                                        <th>Số điện thoại</th>
                                        <th>Số CCCD</th>
                                        <th class="text-center">Quyền</th>
                                        <th class="text-center">Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody id="nhanvienTableBody">
                                    <!-- Data will be loaded here via AJAX -->
                                </tbody>
                            </table>
                        </div>
                        <div id="paginationContainer" class="mt-4">
                        </div>
                        <!-- Empty State -->
                        <div id="emptyState" class="text-center py-5" style="display: none;">
                            <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Không tìm thấy nhân viên nào.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Thêm nhân viên đầu tiên
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/NhanVien/Index.js">
        </script>
}