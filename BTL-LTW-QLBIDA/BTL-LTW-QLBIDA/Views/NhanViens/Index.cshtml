@{
    ViewData["Title"] = "Quản lý Nhân viên";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<link rel="stylesheet" href="~/css/NhanVien/Index.css" />

<div class="row nhanvien-row">

    <div class="col-md-3 mb-3 nhanvien-filter">
        <partial name="_Filter" />
    </div>

    <div class="col-md-9 nhanvien-content">
        <div class="page-title-bar mb-3 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-secondary m-0">Danh sách Nhân viên</h4>
        </div>

        <div id="tableScrollArea" class="table-responsive shadow-sm border rounded bg-white" style="max-height: 700px; overflow-y: auto;">
            <table class="table-nhanvien align-middle mb-0">
                <thead class="sticky-top" style="z-index: 2;">
                    <tr>
                        <th style="width: 100px;">Mã NV</th>
                        <th>Họ và Tên</th>
                        <th>Giới tính</th>
                        <th>SĐT</th>
                        <th>Tài khoản</th>
                        <th>Quyền hạn</th>
                        <th>Trạng thái</th>
                        <th class="text-center" style="min-width: 120px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="nhanvienBody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="ajaxModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" id="ajaxModalContent">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/NhanVien/Index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}