<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/logo.png" />

    @* CSS CORE/EXTERNAL *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @* CSS TÙY CHỈNH CHUNG *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTL_LTW_QLBIDA.styles.css" asp-append-version="true" />
    <link href="~/css/Home_Layout.css" rel="stylesheet" asp-append-version="true" />

    @* CSS TỪ VIEW RIÊNG *@
    @await RenderSectionAsync("Styles", required: false)

    
</head>

<body>
    <header>
        @* Navigation Partial *@
        @await Html.PartialAsync("_NavigationPartial")
    </header>

    <div class="container-fluid px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Footer Partial *@
    @await Html.PartialAsync("_FooterPartial")

    @* JavaScript *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Scripts từ View riêng *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>