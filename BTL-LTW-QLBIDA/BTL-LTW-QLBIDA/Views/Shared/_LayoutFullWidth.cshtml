<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vanh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_Test_CSDL.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-DM2vXo..." crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark px-3">

            <div class="d-flex align-items-center w-100">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-diagram-3-fill me-1"></i> Quản Lý Billiards
                </a>

                <!-- GIÃN CĂN GIỮA -->
                <div class="flex-grow-1"></div>

                @if (Context.Session.GetString("TenDangNhap") != null)
                {
                    <!-- NÚT CHẾ ĐỘ QUẢN LÝ -->
                    @if (Context.Session.GetString("QuyenAdmin") == "1")
                    {
                        <a asp-controller="Home" asp-action="Index"
                           class="btn btn-management me-3">
                            <i class="bi bi-grid me-1"></i> Chế độ quản lý
                        </a>
                    }

                    <!-- USER INFO -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("TenDangNhap") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle p-0" href="#" role="button" data-bs-toggle="dropdown">
                                    <div class="user-info">
                                        <div class="user-avatar">
                                            @(Context.Session.GetString("HoTenNV")?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>
                                        <div class="d-none d-md-block">
                                            <div class="fw-bold" style="font-size: 0.9rem;">
                                                @Context.Session.GetString("HoTenNV")
                                            </div>
                                            @if (Context.Session.GetString("QuyenAdmin") == "1")
                                            {
                                                <span class="badge-admin">
                                                    <i class="fas fa-crown me-1"></i>Admin
                                                </span>
                                            }
                                            else
                                            {
                                                <small style="opacity: 0.8;">Nhân viên</small>
                                            }
                                        </div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                            <i class="fas fa-key me-2"></i>Đổi mật khẩu
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                                </a>
                            </li>
                        }
                    </ul>
                    }
            </div>

        </nav>
    </header>



    <!-- KHÔNG CÓ CONTAINER -->
    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>