@{
    ViewData["Title"] = "Quản lý Khách hàng";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/KhachHang/Index.css" />

<div class="row khachhang-row">
    <div class="col-md-3 mb-3 khachhang-filter">
        <partial name="_Filter" />
    </div>

    <div class="col-md-9 khachhang-content">
        <div class="page-title-bar mb-3 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-secondary m-0">Danh sách Khách hàng</h4>
        </div>

        <div id="tableScrollArea" class="table-responsive shadow-sm border rounded bg-white" style="max-height: 700px; overflow-y: auto;">
            <table class="table-khachhang align-middle mb-0">
                <thead class="sticky-top" style="z-index: 2;">
                    <tr>
                        <th class="col-makh">Mã KH</th>
                        <th class="col-hoten">Họ và Tên</th>
                        <th>SĐT</th>
                        <th>Địa chỉ</th>
                        <th class="text-end">Hóa đơn</th>
                        <th class="text-end">Chi tiêu</th>
                        <th class="text-center col-thaotac">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="khachhangBody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="ajaxModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" id="ajaxModalContent"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/KhachHang/Index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}