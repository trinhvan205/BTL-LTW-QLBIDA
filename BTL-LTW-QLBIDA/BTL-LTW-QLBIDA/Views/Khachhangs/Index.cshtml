@{
    ViewData["Title"] = "Quản lý Khách hàng";
}
<link rel="stylesheet" href="~/css/khachhang/Index.css" />

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filter -->
        <div class="col-md-3 col-lg-2 px-0" style="background: #f8f9fa; min-height: calc(100vh - 120px);">
            <div class="p-3">
                <!-- Nút thêm khách hàng -->
                <div class="mb-4">
                    <a asp-action="Create" class="btn btn-success w-100">
                        <i class="fas fa-plus me-1"></i>Khách hàng
                    </a>
                </div>

                <!-- Tìm kiếm -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </h6>
                    <input type="text" id="searchInput" class="form-control"
                           placeholder="Theo mã, tên, điện thoại">
                </div>

                <!-- Sắp xếp -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-sort me-2"></i>Sắp xếp
                    </h6>

                    <!-- ✅ SẮP XẾP THEO MÃ KHÁCH HÀNG -->
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="sortBy"
                               id="sortIdAsc" value="id_asc" checked>
                        <label class="form-check-label" for="sortIdAsc">
                            <i class="fas fa-sort-numeric-up me-1"></i>Mã KH tăng dần
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="sortBy"
                               id="sortIdDesc" value="id_desc">
                        <label class="form-check-label" for="sortIdDesc">
                            <i class="fas fa-sort-numeric-down me-1"></i>Mã KH giảm dần
                        </label>
                    </div>

                    <hr class="my-2">

                    <!-- ✅ SẮP XẾP THEO TÊN -->
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="sortBy"
                               id="sortNameAsc" value="name_asc">
                        <label class="form-check-label" for="sortNameAsc">
                            <i class="fas fa-sort-alpha-up me-1"></i>Tên A-Z
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="sortBy"
                               id="sortNameDesc" value="name_desc">
                        <label class="form-check-label" for="sortNameDesc">
                            <i class="fas fa-sort-alpha-down me-1"></i>Tên Z-A
                        </label>
                    </div>
                </div>

                <!-- Reset Button -->
                <button type="button" id="btnReset" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-redo me-1"></i>Đặt lại
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10">
            <div class="p-3">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h3 class="mb-1">
                            <i class="fas fa-user-friends me-2"></i>Khách hàng
                        </h3>
                        <p class="text-muted mb-0">
                             Tổng: <strong id="totalCount">0</strong> khách hàng
                        </p>
                    </div>
                    
                </div>

                <div id="apiAlertContainer" class="mb-3">
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="AutoCloseAlert" class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="AutoCloseAlert" class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <!-- Loading Spinner -->
                <div id="loadingSpinner" class="text-center py-5" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Đang tải dữ liệu...</p>
                </div>

                <!-- Table -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="khachhangTable">
                                <thead class="table-light">
                                    <tr>
                                        
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>Điện thoại</th>
                                        <th>Địa chỉ</th>
                                        <th class="text-end">Số hóa đơn</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody id="khachhangTableBody">
                                    <!-- Data will be loaded here via AJAX -->
                                </tbody>
                            </table>
                        </div>

                        <div class="card-footer bg-white border-0 py-3" id="paginationContainer">
                        </div>

                        <div id="emptyState" class="text-center py-5" style="display: none;">

                        <!-- Empty State -->
                        <div id="emptyState" class="text-center py-5" style="display: none;">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Không tìm thấy khách hàng nào.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Thêm khách hàng đầu tiên
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/KhachHang/Index.js"></script>
}