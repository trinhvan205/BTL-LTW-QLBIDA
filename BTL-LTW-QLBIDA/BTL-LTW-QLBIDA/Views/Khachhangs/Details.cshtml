@model BTL_LTW_QLBIDA.Models.Khachhang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}
<link rel="stylesheet" href="~/css/khachhang/Details.css" />

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">Khách hàng</a>
                    </li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Cột trái - Avatar và tổng quan -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="avatar-large bg-success text-white mx-auto mb-3">
                        @(Model.Hoten?.Substring(0, 1).ToUpper() ?? "K")
                    </div>
                    <h4 class="mb-1">@Model.Hoten</h4>
                    <p class="text-muted mb-3">@Model.Idkh</p>

                    <!-- Thống kê -->
                    <div class="row text-center mb-3">
                        <div class="col-6">
                            <div class="border-end">
                                <h5 class="text-primary mb-0">@Model.Hoadons.Count</h5>
                                <small class="text-muted">Hóa đơn</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h5 class="text-success mb-0">
                                @(Model.Hoadons.Sum(hd => hd.Tongtien)?.ToString("N0") ?? "0") đ
                            </h5>
                            <small class="text-muted">Tổng chi tiêu</small>
                        </div>
                    </div>

                    <!-- Action buttons -->
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Idkh" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>

                        @if (!Model.Hoadons.Any())
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Idkh" class="btn btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>Xóa khách hàng
                            </a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-secondary" disabled
                                    title="Không thể xóa khách hàng có hóa đơn">
                                <i class="fas fa-ban me-1"></i>Không thể xóa
                            </button>
                            <small class="text-muted mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Khách hàng có hóa đơn không thể xóa
                            </small>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột phải - Thông tin chi tiết -->
        <div class="col-md-8">
            <!-- Thông tin cá nhân -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>Thông tin cá nhân
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-id-card text-success me-2"></i>Mã khách hàng
                                </span>
                                <span class="info-value">@Model.Idkh</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-user text-success me-2"></i>Họ và tên
                                </span>
                                <span class="info-value">@Model.Hoten</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-phone text-success me-2"></i>Số điện thoại
                                </span>
                                <span class="info-value">@(Model.Sodt ?? "Chưa cập nhật")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-map-marker-alt text-success me-2"></i>Địa chỉ
                                </span>
                                <span class="info-value">@(Model.Dchi ?? "Chưa cập nhật")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lịch sử hóa đơn -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>Lịch sử hóa đơn
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Hoadons.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã hóa đơn</th>
                                        <th>Ngày lập</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th class="text-center">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hd in Model.Hoadons.OrderByDescending(h => h.Ngaylap))
                                    {
                                        <tr>
                                            <td class="fw-bold">@hd.Idhd</td>
                                            <td>@hd.Ngaylap?.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-end fw-bold">@hd.Tongtien?.ToString("N0") đ</td>
                                            <td class="text-center">
                                                @if (hd.Trangthai == true)
                                                {
                                                    <span class="badge bg-success">Đã thanh toán</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Chưa thanh toán</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Khách hàng chưa có hóa đơn nào</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Nút quay lại -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
