@model BTL_LTW_QLBIDA.Models.Khachhang

@{
    ViewData["Title"] = "Xóa khách hàng";
}
<link rel="stylesheet" href="~/css/khachhang/Delete.css" />

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">Khách hàng</a>
                    </li>
                    <li class="breadcrumb-item active">Xóa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa khách hàng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa khách hàng này không?
                        Hành động này không thể hoàn tác!
                    </div>

                    <!-- Thông tin khách hàng -->
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-3">
                            <div class="avatar-circle bg-danger text-white me-3">
                                @(Model.Hoten?.Substring(0, 1).ToUpper() ?? "K")
                            </div>
                            <div>
                                <h5 class="mb-0">@Model.Hoten</h5>
                                <small class="text-muted">@Model.Idkh</small>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-phone text-muted me-1"></i>Số điện thoại
                                </span>
                                <span class="info-value">@(Model.Sodt ?? "Chưa có")</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="info-item">
                                <span class="info-label">
                                    <i class="fas fa-map-marker-alt text-muted me-1"></i>Địa chỉ
                                </span>
                                <span class="info-value">@(Model.Dchi ?? "Chưa có")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Kiểm tra hóa đơn -->
                    @if (Model.Hoadons?.Any() == true)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-ban me-2"></i>
                            <strong>Không thể xóa!</strong> Khách hàng này đã có
                            <strong>@Model.Hoadons.Count hóa đơn</strong>.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Idkh" class="btn btn-primary">
                                <i class="fas fa-eye me-1"></i>Xem chi tiết
                            </a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Idkh" />

                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                Khách hàng chưa có hóa đơn. Có thể xóa an toàn.
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>Hủy
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Xác nhận xóa
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
