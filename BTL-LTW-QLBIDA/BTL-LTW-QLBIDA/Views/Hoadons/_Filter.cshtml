@* Partial View: _Filter.cshtml *@

<div class="card dv-sidebar-card p-3 shadow-sm border-0">
    <h5 class="fw-bold text-secondary mb-3">
        <i class="bi bi-funnel me-1"></i> Bộ lọc & tìm kiếm
    </h5>

    <form id="filterForm">
        <label class="form-label">Mã hóa đơn</label>
        <input name="ma" class="form-control form-control-sm mb-2" placeholder="Nhập mã ..." />

        <label class="form-label">Khách hàng</label>
        <input name="khach" class="form-control form-control-sm mb-3" placeholder="Tên khách ..." />

        <label class="form-label">Từ ngày</label>
        <input type="date" name="from" class="form-control form-control-sm mb-2" />

        <label class="form-label">Đến ngày</label>
        <input type="date" name="to" class="form-control form-control-sm mb-3" />

        <label class="form-label">Trạng thái</label>
        <select name="trangthai" class="form-select form-select-sm mb-3">
            <option value="">Tất cả</option>
            <option value="false">Đang xử lý</option>
            <option value="true">Hoàn thành</option>
        </select>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="bi bi-search"></i> Lọc
            </button>
            <button type="button" id="btnClearFilter" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-counterclockwise"></i> Xóa lọc
            </button>
        </div>
    </form>
</div>